<select id="headmonthChart" resultType="headmonthVO">
select
    to_char(frcs_opdate, 'YYYY-MM') as month,
    count(*) * 500000 *
    case
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-01' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-02' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-03' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-04' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-05' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-06' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-07' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-08' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-09' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-10' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-11' then 1
        when to_char(frcs_opdate, 'YYYY-MM') = '2023-12' then 1
        else 0
    end as monthfrcs_amt
from franchise
where to_char(frcs_opdate, 'YYYY-MM') in ('2023-01', '2023-02', '2023-03', '2023-04', '2023-05', '2023-06', '2023-07', '2023-08', '2023-09', '2023-10', '2023-11', '2023-12')
group by to_char(frcs_opdate, 'YYYY-MM')
order by month
</select>

