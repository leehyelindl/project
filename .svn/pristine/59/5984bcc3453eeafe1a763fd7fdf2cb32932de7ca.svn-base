	<select id="detail" parameterType="String" resultType="FranchiseVO">
 		SELECT
		    a.frcs_id
		  , a.frcs_name
		  , a.frcs_state
		  , a.frcs_tel
		  , a.frcs_stdate
		  , a.frcs_enddate
		  , a.frcs_post
		  , a.frcs_add1
		  , a.frcs_add2
		  , a.frcs_sttime
		  , a.frcs_endtime
		  , a.frcs_cdate
		  , a.frcs_insdate
		  , a.frcs_inedate
		  , a.frcs_opdate
		  , a.frcs_xmap
		  , a.frcs_ymap
		  , a.frcs_star
		  , a.frcs_psncpa
		  , b.MEM_ID
		  , c.MEM_PW
		FROM
		    franchise a
		    , FRCS_OWNERSHIP b
		    , MEMBER c
		where a.frcs_id=b.frcs_id
		    and a.frcs_id='aaabbb2'
		    and b.MEM_ID=c.MEM_ID
 	</select>
 	
 	<update id="update" parameterType="franchiseVO">
 		update franchise
		set
			frcs_tel = #{frcsTel},
			frcs_add1 = #{frcsAdd1}, 
			frcs_add2 = #{frcsAdd2}
		where frcs_id= 'aaabbb2'
 	</update>


